<Window x:Class="BasicMechanism.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicMechanism"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Cursor="Hand">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="77*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="ButtonAdd" Content="ADD" HorizontalAlignment="Left" Margin="10,328,0,0" VerticalAlignment="Top" Width="45" Height="20" Cursor="Hand" Click="ButtonAdd_Click"/>
        <Button x:Name="ButtonDelete" Content="DELETE" HorizontalAlignment="Left" Margin="82,328,0,0" VerticalAlignment="Top" Width="44" Height="20" Cursor="Hand"/>
        <Button x:Name="ButtonEdit" Content="EDIT" HorizontalAlignment="Left" Margin="153,328,0,0" VerticalAlignment="Top" Height="20" Width="45"/>
        <ListBox x:Name="ListOfRules" Margin="10,41,217,111" Cursor="Hand"/>
        <Label Content="List of Rules:" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" Width="188"/>
    </Grid>
</Window>
